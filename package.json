  },
  "homepage": "https://github.com/Mellow254/Mellow-CSS#readme",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.1",
    "prettier": "2.8.4",
    "sass": "^1.58.0",
    "semantic-release": "^20.1.0",
    "stylelint": "^14.10.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard-scss": "^6.1.0"
