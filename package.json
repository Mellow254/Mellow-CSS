{
  "name": "mellow-scss",
  "version": "0.0.0",
  "description": "",
  "main": "src/main.scss",
  "scripts": {
    "build:sass": "sass --watch src:dist/css",
    "prettier": "prettier --check \"src/**/*.scss\"",
    "prettier:fix": "prettier --write \"src/**/*.scss\"",
    "stylelint": "stylelint \"src/**/*.scss\"",
    "stylelint:fix": "stylelint --fix \"src/**/*.scss\"",
    "lint:fix": "npm run prettier:fix && npm run stylelint:fix",
    "test": "npm run prettier && npm run stylelint",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
